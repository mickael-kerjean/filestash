# http://editorconfig.org
root                     = true
[*]
indent_style             = space
indent_size              = 4
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true

[*.go]
indent_size = 4
indent_style = tab

[Makefile]
indent_style = tab